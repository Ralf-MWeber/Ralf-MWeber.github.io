import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.net.HttpURLConnection;
import java.net.URL;

public class WetterKoeln {
    public static void main(String[] args) {
        try {
            String apiUrl = "https://api.openweathermap.org/data/2.5/weather?q=Cologne,de&appid=DEIN_API_KEY";
            URL url = new URL(apiUrl);
            HttpURLConnection connection = (HttpURLConnection) url.openConnection();
            connection.setRequestMethod("GET");

            BufferedReader reader = new BufferedReader(new InputStreamReader(connection.getInputStream()));
            StringBuilder response = new StringBuilder();
            String line;

            while ((line = reader.readLine()) != null) {
                response.append(line);
            }
            reader.close();

            System.out.println("Wetterdaten für Köln: " + response.toString());
        } catch (Exception e) {
            System.out.println("Fehler beim Abrufen der Wetterdaten: " + e.getMessage());
        }
    }
}
